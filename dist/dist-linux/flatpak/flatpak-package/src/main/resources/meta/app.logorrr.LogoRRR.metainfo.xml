<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>app.logorrr.LogoRRR</id>
    <name>LogoRRR</name>
    <summary>Explore logs effortlessly</summary>
    <metadata_license>CC-BY-4.0</metadata_license>
    <project_license>Apache-2.0</project_license>
    <url type="homepage">https://www.logorrr.app/</url>
    <url type="bugtracker">https://github.com/rladstaetter/LogoRRR/issues</url>
    <url type="donation">https://buymeacoffee.com/rladstaetter</url>
    <url type="contact">https://bsky.app/profile/logorrr.bsky.social</url>
    <url type="contribute">https://github.com/rladstaetter/LogoRRR</url>
    <url type="vcs-browser">https://github.com/rladstaetter/LogoRRR</url>
    <update_contact>support@logorrr.app</update_contact>
    <developer id="app.logorrr">
        <name>Robert Ladstätter</name>
    </developer>
    <provides>
        <binary>LogoRRR</binary>
    </provides>
    <description>
        <p>
            LogoRRR is a powerful desktop application designed to simplify the analysis of text files for recurring
            patterns.
        </p>
        <p>
            Whether you’re searching for specific events in log files or analysing any other type of text file, LogoRRR
            makes the process effortless and efficient.
        </p>
        <p>
            Key features include:
        </p>
        <ul>
            <li>Easy Pattern Recognition: Quickly identify recurring patterns in your text files.</li>
            <li>Versatile Application: Perfect for log file analysis, but adaptable to any text file.</li>
            <li>User-Friendly Interface: Designed with simplicity and ease of use in mind.</li>
        </ul>
        <p><em>R</em>ead. <em>R</em>eview. <em>R</em>elax.</p>
    </description>
    <launchable type="desktop-id">app.logorrr.LogoRRR.desktop</launchable>
    <screenshots>
        <screenshot type="default">
            <image>https://www.logorrr.app/images/appstores/flathub/logorrr-main.png</image>
            <caption>LogoRRR - logfiles at a glance</caption>
        </screenshot>
        <screenshot>
            <image>https://www.logorrr.app/images/appstores/flathub/logorrr-timestamp.png</image>
            <caption>Configure timestamps to enable time slot filtering</caption>
        </screenshot>
        <screenshot>
            <image>https://www.logorrr.app/images/appstores/flathub/logorrr-searchtermgroups.png</image>
            <caption>Use search term groups to filter for common events</caption>
        </screenshot>
    </screenshots>
    <branding>
        <color type="primary" scheme_preference="light">#abab9a</color>
        <color type="primary" scheme_preference="dark">#54544b</color>
    </branding>
    <content_rating type="oars-1.1"/>
    <releases>
        <!--
        <release version="${project.version}" date="${currentDate}"></release>
        -->
        <release version="25.2.0" date="2025-12-23">
            <description>
                <p>This release contains various bug fixes and brings significant enhancements to user control and
                    visualization.</p>
                <p>It contains customizable and reusable search term groups.</p>
                <p>It improves visual style by displaying the number of hits for each search term.</p>
                <p>it improves live observation of log files and uses less resources.</p>
            </description>
        </release>
        <release version="25.1.0" date="2025-06-15">
            <description>
                <p>Initial release for flatpak.</p>
            </description>
        </release>
    </releases>
    <categories>
        <category>System</category>
        <category>Development</category>
        <category>Utility</category>
    </categories>
    <keywords>
        <keyword>log viewer</keyword>
        <keyword>pattern recognition</keyword>
        <keyword>log analysis</keyword>
        <keyword>text file management</keyword>
    </keywords>
</component>