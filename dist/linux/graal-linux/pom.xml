<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>app.logorrr.dist.linux</groupId>
        <artifactId>linux</artifactId>
        <version>${revision}${changelist}</version>
    </parent>

    <artifactId>graal-linux</artifactId>
    <name>${project.groupId}:${project.artifactId}</name>
    <packaging>pom</packaging>

    <properties>
        <native.output.dir>${project.build.directory}/native/</native.output.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>app.logorrr</groupId>
            <artifactId>app</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- has to be defined to copy meta inf json files for native-image to proper place (see plugin management) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-javafx-libs-for-native-image</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${native.output.dir}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../../env/target/javafx-sdk-${openjfx.version}/lib/</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>libdecora_sse.so</include>
                                        <include>libglass.so</include>
                                        <include>libglassgtk3.so</include>
                                        <include>libjava.so</include>
                                        <include>libjavafx_font.so</include>
                                        <include>libjavafx_font_freetype.so</include>
                                        <include>libjavafx_font_pango.so</include>
                                        <include>libjavajpeg.so</include>
                                        <include>libjvm.so</include>
                                        <include>libprism_common.so</include>
                                        <include>libprism_es2.so</include>
                                        <include>libprism_sw.so</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.graalvm.buildtools</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>build-native</id>
                        <goals>
                            <goal>compile-no-fork</goal>
                        </goals>
                        <phase>compile</phase>
                    </execution>
                </executions>
                <configuration>
                    <imageName>logorrr</imageName>
                    <verbose>true</verbose>
                    <outputDirectory>${native.output.dir}</outputDirectory>
                    <mainClass>${main.class}</mainClass>
                    <buildArgs>
                        <buildArg>-march=compatibility</buildArg>
                        <buildArg>-H:ConfigurationFileDirectories=${basedir}/src/main/resources/</buildArg>
                        <buildArg>-H:+UnlockExperimentalVMOptions</buildArg>
                        <buildArg>-H:+CompactingOldGen</buildArg>
                        <buildArg>--future-defaults=all</buildArg>
                        <buildArg>--enable-url-protocols=https</buildArg>
                        <buildArg>--enable-native-access=ALL-UNNAMED</buildArg>
                    </buildArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-binaries-zip</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>archive.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>sftp-upload</id>
                        <phase>install</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${basedir}/../upload.sh</argument>
                                <argument>${app.logorrr.dist.linux.uploadserver}</argument>
                                <argument>${app.logorrr.dist.linux.username}</argument>
                                <argument>${project.build.directory}/graal-linux-${project.version}-${graal.os.arch}.zip</argument>
                                <argument>public_html/downloads/${project.version}</argument>
                                <argument>${app.logorrr.dist.linux.privatekey}</argument>
                            </arguments>
                            <workingDirectory>${project.basedir}</workingDirectory>
                            <useMavenLogger>true</useMavenLogger>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>