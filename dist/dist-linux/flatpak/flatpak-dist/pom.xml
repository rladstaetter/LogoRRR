<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>app.logorrr.dist.linux.flatpak</groupId>
        <artifactId>flatpak</artifactId>
        <version>${revision}${changelist}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>flatpak-dist</artifactId>

    <name>app.logorrr.dist.linux.flatpak.dist</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-flatpak-yml-raw</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>app.logorrr.dist.linux.flatpak</groupId>
                                    <artifactId>flatpak-yml</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/unpacked-raw</outputDirectory>
                            <includes>app.logorrr.LogoRRR.yml</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-flatpak-archive</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/flatpak.archive</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/unpacked-raw</directory>
                                    <includes>
                                        <include>app.logorrr.LogoRRR.yml</include>
                                    </includes>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <filters>
                                <filter>archive-filter.properties</filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-flatpak-archive</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${flatpak.binary}</executable>
                            <workingDirectory>${project.build.directory}/flatpak.archive</workingDirectory>
                            <arguments>
                                <argument>--verbose</argument>
                                <argument>--force-clean</argument>
                                <argument>--user</argument>
                                <argument>--install-deps-from=flathub</argument>
                                <argument>--install</argument>
                                <argument>flatpak-target-dir</argument>
                                <argument>app.logorrr.LogoRRR.yml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>