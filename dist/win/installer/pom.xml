<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>app.logorrr.dist.win</groupId>
        <artifactId>win</artifactId>
        <version>${revision}${changelist}</version>
    </parent>

    <artifactId>installer</artifactId>
    <name>app.logorrr.dist.win:installer</name>
    <description>Windows installer using Advanced Installer</description>

    <dependencies>
        <dependency>
            <groupId>app.logorrr</groupId>
            <artifactId>app</artifactId>
        </dependency>
        <dependency>
            <groupId>app.logorrr</groupId>
            <artifactId>build</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
            <execution>
                <id>copy-installer-icons</id>
                <phase>process-resources</phase>
                <goals>
                    <goal>copy-resources</goal>
                </goals>
                <configuration>
                    <outputDirectory>${project.build.directory}/installer/</outputDirectory>
                    <resources>
                        <resource>
                            <directory>src/main/ai</directory>
                            <includes>
                                <include>logorrr-icon-128.ico</include>
                            </includes>
                            <filtering>false</filtering>
                        </resource>
                        <resource>
                            <directory>src/main/ai</directory>
                            <includes>
                                <include>logorrr-installer.aip</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                    </resources>
                </configuration>
            </execution>
            </executions></plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-app-icons</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>app.logorrr</includeGroupIds>
                            <includeArtifactIds>app-icons</includeArtifactIds>
                            <outputDirectory>${project.build.directory}/installer/</outputDirectory>
                            <includes>**/logorrr-icon-128.ico</includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-deps</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <!-- important not to overwrite jar files because of name clashes (core.jar for example) -->
                            <prependGroupId>true</prependGroupId>
                            <outputDirectory>${project.build.directory}/installer/programfiles/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>fetch-jre</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <url>${windows.temurin.version}</url>
                    <unpack>true</unpack>
                    <outputDirectory>${project.build.directory}/installer/</outputDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>process-product-code-logorrr-installer</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>app.logorrr.build.ProductCodeUpdater</mainClass>
                            <arguments>
                                <argument>${project.build.directory}/installer/logorrr-installer.aip</argument>
                                <argument>${project.artifactId}-${revision}</argument>
                            </arguments>
                            <includePluginDependencies>true</includePluginDependencies>
                        </configuration>
                    </execution>
                    <!-- Create installer -->
                    <execution>
                        <id>create-installer-slim</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${advanced.installer.compiler}</executable>
                            <workingDirectory>${project.build.directory}/installer/</workingDirectory>
                            <arguments>
                                <argument>/rebuild</argument>
                                <argument>logorrr-installer.aip</argument>
                            </arguments>
                            <useMavenLogger>true</useMavenLogger>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>