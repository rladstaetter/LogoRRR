<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>app.logorrr.dist.linux</groupId>
        <artifactId>dist-linux</artifactId>
        <version>${revision}${changelist}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>app.logorrr.dist.linux.flatpak</groupId>
    <artifactId>flatpak</artifactId>

    <name>app.logorrr.dist.linux.flatpak</name>
    <description>Flatpak build for linux</description>

    <properties>
        <flatpak.binary>/usr/bin/flatpak-builder</flatpak.binary>
    </properties>

    <dependencies>
        <dependency>
            <groupId>app.logorrr.dist.linux</groupId>
            <artifactId>app-image</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-deps-local</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>app.logorrr.dist.linux</groupId>
                                    <artifactId>app-image</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>${project.build.directory}/flatpak.local/flat/binaries
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <!-- Generate flatpak.archive version -->
                    <!-- this version nees a hosted version of the archive.xml tgz file with appropriate sha256 checksum -->
                    <execution>
                        <id>copy-flatpak-archive</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/flatpak.archive</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources/flat</directory>
                                    <includes>
                                        <include>app.logorrr.LogoRRR.yml</include>
                                        <include>app.logorrr.LogoRRR.desktop</include>
                                        <include>app.logorrr.LogoRRR.metainfo.xml</include>
                                    </includes>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <filters>
                                <filter>archive-filter.properties</filter>
                            </filters>
                        </configuration>
                    </execution>

                    <!-- Generate flatpak.local version -->
                    <execution>
                        <id>copy-flatpak-local</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/flatpak.local</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources/flat</directory>
                                    <includes>
                                        <include>app.logorrr.LogoRRR.yml</include>
                                        <include>app.logorrr.LogoRRR.desktop</include>
                                        <include>app.logorrr.LogoRRR.metainfo.xml</include>
                                    </includes>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>src/main/resources/icons</directory>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                    <filtering>false</filtering>
                                    <targetPath>${project.build.directory}/flatpak.local/flat/icons</targetPath>
                                </resource>
                                <resource>
                                    <directory>src/main/resources/meta</directory>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                    <filtering>false</filtering>
                                    <targetPath>${project.build.directory}/flatpak.local/flat/meta</targetPath>
                                </resource>
                            </resources>
                            <filters>
                                <filter>local-filter.properties</filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-flatpak-local</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${flatpak.binary}</executable>
                            <workingDirectory>${project.build.directory}/flatpak.local</workingDirectory>
                            <arguments>
                                <argument>--verbose</argument>
                                <argument>--force-clean</argument>
                                <argument>--user</argument>
                                <argument>--install-deps-from=flathub</argument>
                                <argument>--install</argument>
                                <argument>flatpak-target-dir</argument>
                                <argument>app.logorrr.LogoRRR.yml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-flatpak-archive</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${flatpak.binary}</executable>
                            <workingDirectory>${project.build.directory}/flatpak.archive</workingDirectory>
                            <arguments>
                                <argument>--verbose</argument>
                                <argument>--force-clean</argument>
                                <argument>--user</argument>
                                <argument>--install-deps-from=flathub</argument>
                                <argument>--install</argument>
                                <argument>flatpak-target-dir</argument>
                                <argument>app.logorrr.LogoRRR.yml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>archive.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-tar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sha256</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <checksum fileext=".sha256" algorithm="SHA-256">
                                    <fileset dir="${project.build.directory}" includes="*archive.tar.gz"/>
                                </checksum>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>