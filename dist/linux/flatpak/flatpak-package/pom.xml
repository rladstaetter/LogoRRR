<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>app.logorrr.dist.linux.flatpak</groupId>
        <artifactId>flatpak</artifactId>
        <version>${revision}${changelist}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>flatpak-package</artifactId>

    <name>${groupId}:${artifactId}</name>
    <description>Build flatpak package</description>

    <dependencies>
        <dependency>
            <groupId>app.logorrr.dist.linux</groupId>
            <artifactId>app-image</artifactId>
        </dependency>
        <dependency>
            <groupId>app.logorrr.dist.linux.flatpak</groupId>
            <artifactId>flatpak-yml</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-flatpak-yml-raw</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>app.logorrr.dist.linux.flatpak</groupId>
                                    <artifactId>flatpak-yml</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/unpacked-raw</outputDirectory>
                            <includes>app.logorrr.LogoRRR.yml</includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-deps-local</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>app.logorrr.dist.linux</groupId>
                                    <artifactId>app-image</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>${project.build.directory}/flatpak.local/flat/${os.arch}/binaries
                                    </outputDirectory>
                                    <excludes>**/META-INF/**</excludes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-app-icons</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>app.logorrr</includeGroupIds>
                            <includeArtifactIds>app-icons</includeArtifactIds>
                            <outputDirectory>${project.build.directory}/flatpak.local/flat/${os.arch}/icons</outputDirectory>
                            <includes>**/*.png</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>filter-and-copy-flatpak-yml</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/flatpak.local</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/unpacked-raw</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>app.logorrr.LogoRRR.yml</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>src/main/resources/meta</directory>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                    <filtering>false</filtering>
                                    <targetPath>${project.build.directory}/flatpak.local/flat/${os.arch}/meta</targetPath>
                                </resource>
                            </resources>
                            <filters>
                                <filter>local-filter.properties</filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>validate-appstream</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>appstream-util</executable>
                            <arguments>
                                <argument>validate</argument>
                                <argument>${project.basedir}/src/main/resources/meta/app.logorrr.LogoRRR.metainfo.xml</argument>
                            </arguments>
                            <successCodes>
                                <successCode>0</successCode>
                            </successCodes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-flatpak-local</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${flatpak.binary}</executable>
                            <workingDirectory>${project.build.directory}/flatpak.local</workingDirectory>
                            <arguments>
                                <argument>--verbose</argument>
                                <argument>--force-clean</argument>
                                <argument>--user</argument>
                                <argument>--install-deps-from=flathub</argument>
                                <argument>--install</argument>
                                <argument>flatpak-target-dir</argument>
                                <argument>app.logorrr.LogoRRR.yml</argument>
                            </arguments>
                            <useMavenLogger>true</useMavenLogger>
                        </configuration>
                    </execution>
                    <execution>
                        <id>upload-binary</id>
                        <phase>install</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${basedir}/../../upload.sh</argument>
                                <argument>${app.logorrr.dist.linux.uploadserver}</argument>
                                <argument>${app.logorrr.dist.linux.username}</argument>
                                <argument>${project.build.directory}/${flatpak.output}</argument>
                                <argument>public_html/downloads/${project.version}</argument>
                                <argument>${app.logorrr.dist.linux.privatekey}</argument>
                            </arguments>
                            <workingDirectory>${project.basedir}</workingDirectory>
                            <useMavenLogger>true</useMavenLogger>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-checksum-properties</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${basedir}/checksum.sh</argument>
                                <argument>${project.build.directory}/${flatpak.output}</argument>
                                <argument>flatpak.package.${flatpak.os.arch}.checksum</argument>
                                <argument>${project.build.directory}/${flatpak.output.checksum}</argument>
                            </arguments>
                            <workingDirectory>${project.basedir}</workingDirectory>
                            <useMavenLogger>true</useMavenLogger>
                        </configuration>
                    </execution>
                    <execution>
                        <id>upload-binary-checksum</id>
                        <phase>install</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${basedir}/../../upload.sh</argument>
                                <argument>${app.logorrr.dist.linux.uploadserver}</argument>
                                <argument>${app.logorrr.dist.linux.username}</argument>
                                <argument>${project.build.directory}/${flatpak.output}.properties</argument>
                                <argument>public_html/downloads/${project.version}</argument>
                                <argument>${app.logorrr.dist.linux.privatekey}</argument>
                            </arguments>
                            <workingDirectory>${project.basedir}</workingDirectory>
                            <useMavenLogger>true</useMavenLogger>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>archive.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-tar</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>