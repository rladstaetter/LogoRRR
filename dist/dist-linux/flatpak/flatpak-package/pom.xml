<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>app.logorrr.dist.linux.flatpak</groupId>
        <artifactId>flatpak</artifactId>
        <version>${revision}${changelist}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>flatpak-package</artifactId>

    <name>app.logorrr.dist.linux.flatpak.package</name>
    <description>Build flatpak package</description>

    <properties>
        <flatpak.binary>/usr/bin/flatpak-builder</flatpak.binary>
    </properties>

    <dependencies>
        <dependency>
            <groupId>app.logorrr.dist.linux</groupId>
            <artifactId>app-image</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-flatpak-yml-raw</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>app.logorrr.dist.linux.flatpak</groupId>
                                    <artifactId>flatpak-yml</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/unpacked-raw</outputDirectory>
                            <includes>app.logorrr.LogoRRR.yml</includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-deps-local</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>app.logorrr.dist.linux</groupId>
                                    <artifactId>app-image</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>${project.build.directory}/flatpak.local/flat/${os.arch}/binaries
                                    </outputDirectory>
                                    <excludes>**/META-INF/**</excludes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>filter-and-copy-flatpak-yml</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/flatpak.local</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/unpacked-raw</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>app.logorrr.LogoRRR.yml</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>src/main/resources/icons</directory>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                    <filtering>false</filtering>
                                    <targetPath>${project.build.directory}/flatpak.local/flat/${os.arch}/icons</targetPath>
                                </resource>
                                <resource>
                                    <directory>src/main/resources/meta</directory>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                    <filtering>false</filtering>
                                    <targetPath>${project.build.directory}/flatpak.local/flat/${os.arch}/meta</targetPath>
                                </resource>
                            </resources>
                            <filters>
                                <filter>local-filter.properties</filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-flatpak-local</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${flatpak.binary}</executable>
                            <workingDirectory>${project.build.directory}/flatpak.local</workingDirectory>
                            <arguments>
                                <argument>--verbose</argument>
                                <argument>--force-clean</argument>
                                <argument>--user</argument>
                                <argument>--install-deps-from=flathub</argument>
                                <argument>--install</argument>
                                <argument>flatpak-target-dir</argument>
                                <argument>app.logorrr.LogoRRR.yml</argument>
                            </arguments>
                            <useMavenLogger>true</useMavenLogger>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>archive.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-tar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sha256</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <checksum fileext=".sha256" algorithm="SHA-256">
                                    <fileset dir="${project.build.directory}" includes="*${os.arch}.tar.gz"/>
                                </checksum>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>